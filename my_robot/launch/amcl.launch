<?xml version="1.0"?>
<launch>
    <!-- TODO: Add nodes here -->

    <!-- map server -->
    <arg name="map_file" default="$(find my_robot)/maps/map.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

    <!-- acml node -->
    <node name="amcl" pkg="amcl" type="amcl" output="screen"> 
        <remap from="scan" to="/scan"/>
        <param name="odom_frame_id" value="odom"/>
        <param name="odom_model_type" value="diff-corrected"/>
        <param name="base_frame_id" value="robot_footprint"/>
        <param name="global_frame_id" value="map"/>

        <!-- Overall Filter -->
        <param name="static_map" value="true"/>
        <param name="min_particles" value="50"/>
        <param name="max_particles" value="200"/>
        <param name="update_min_a" value="0.5"/>
        <param name="update_min_d" value="3.14/15"/>

        <!-- Laser -->
        <param name="laser_min_range" value="-0.5"/>
        <param name="laser_max_range" value="-4.0"/>
        <param name="laser_max_beams" value="20"/>
        <param name="laser_z_hit" value="0.95"/>
        <param name="laser_z_rand" value="0.05"/>
        
         <!-- Odom -->
        <param name="odom_alpha1" value="0.05"/>
        <param name="odom_alpha2" value="0.05"/>
        <param name="odom_alpha3" value="0.05"/>
        <param name="odom_alpha4" value="0.05"/>
        <param name="odom_frame_id" value="odom"/>

        
        <!-- If you choose to define initial pose here -->
        <param name="initial_pose_x" value="-4"/>
        <param name="initial_pose_y" value="-2"/>
        <param name="initial_pose_a" value="-1.5708"/>
        
        
    </node>

</launch>

